<Window x:Class="WPF_Group_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Group_Project"
        mc:Ignorable="d"
        Title="Truck Rental" Height="450" Width="600" ResizeMode="NoResize">
   
    <Canvas>
        <Canvas.Resources>
 
        </Canvas.Resources>

        
      
       
        <ListBox x:Name="CustomersDisplay"  Height="380" Width="200" Canvas.Left="20" Canvas.Top="20"
                 SelectionMode="Single" SelectionChanged = "CustomersDisplay_SelectionChanged">

          
        </ListBox>
        <TextBlock Name="Customerinfo"   Height="340" Width="320"  Canvas.Left="240" Canvas.Top="20">
            
        </TextBlock>


        <Button x:Name="SelectBtn" Content="Select" Canvas.Left="250" Canvas.Bottom="23" Height="30" Width="60" 
                Click="SelectBtn_Click"/>
        <Button x:Name="EditBtn" Content="Edit" Canvas.Left="330" Canvas.Bottom="23" Height="30" Width="60"
                Click="EditBtn_Click"/>
        <Button x:Name="DeleteBtn" Content="Delete" Canvas.Left="410" Canvas.Bottom="23" Height="30" Width="60"
                Click="DeleteBtn_Click"/>
        <Button x:Name="AddBtn" Content="Add" Canvas.Left="490" Canvas.Bottom="23" Height="30" Width="60"
                Click="AddBtn_Click"/>








    </Canvas>
</Window>
