<Window x:Class="WPF_Group_Project.AddPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Group_Project"
        mc:Ignorable="d"
        Title="Customer Information" Height="400" Width="400" ResizeMode="NoResize">
    <Canvas>
        
        <Label Canvas.Left="20" Canvas.Top="35" Content="First Name" FontSize="20"/>
        <TextBox x:Name="FirstNameBox" Canvas.Left="150" Canvas.Top="40" Width="200" Height="30" FontSize="20"/>

        <Label Canvas.Left="20" Canvas.Top="95" Content="Last Name" FontSize="20"/>
        <TextBox x:Name="LastNameBox" Canvas.Left="150" Canvas.Top="100" Width="200" Height="30" FontSize="20"/>
        
        <Label Canvas.Left="80" Canvas.Top="155" Content="Age" FontSize="20"/>
        <TextBox x:Name="BirthdayBox" Canvas.Left="150" Canvas.Top="160" Width="200" Height="30" FontSize="20"/>

        <Label Content="Address" Canvas.Left="50" Canvas.Top="215" FontSize="20"/>
        <TextBox x:Name="AddressBox" Canvas.Left="150" Canvas.Top="220" Width="200" Height="30" FontSize="20"/>

        <Button x:Name="CustomerBtn" Canvas.Left="165" Canvas.Bottom="50" Width="70" Height="40" FontSize="20"  Content="Save" Click="CustomerBtn_Click"/>
    </Canvas>
</Window>
